<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:InventoryTracker.ViewModels"
             xmlns:models="using:InventoryTracker.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="InventoryTracker.DashboardPage"
             x:DataType="vm:DashboardViewModel">

	<Border Background="#18191A">
		<!--CornerRadius="20"-->
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="75"/>
				<RowDefinition />
			</Grid.RowDefinitions>

			<!-- Home Section Title -->
			<TextBlock Text="Home" Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="25"
                       Foreground="White"
                       Margin="10" />

			<Grid Grid.Row="1">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="*" />
				</Grid.RowDefinitions>

				<!-- Stats Section -->
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
					<Border Width="150" Height="100" VerticalAlignment="Top" CornerRadius="10" Background="#242526">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="*" />
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>
							<TextBlock Text="1000" Grid.Row="0" FontSize="20" Foreground="#0F52BA"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0" />
							<TextBlock Text="Total Items" Grid.Row="1" FontSize="12" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" Foreground="White" Margin="0,0,0,5" />
						</Grid>
					</Border>

					<Border Width="150" Height="100" VerticalAlignment="Top" CornerRadius="10" Background="#242526">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="*" />
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>
							<TextBlock Text="500" Grid.Row="0" FontSize="20" Foreground="#EF5350"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0" />
							<TextBlock Text="Wasted Items" Grid.Row="1" FontSize="12" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" Foreground="White" Margin="0,0,0,5" />
						</Grid>
					</Border>

					<Border Width="150" Height="100" VerticalAlignment="Top" CornerRadius="10" Background="#242526">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="*" />
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>
							<TextBlock Text="5" Grid.Row="0" FontSize="20" Foreground="#CC3010"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0" />
							<TextBlock Text="Low Stock" Grid.Row="1" FontSize="12" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" Foreground="White" Margin="0,0,0,5" />
						</Grid>
					</Border>

					<Border Width="150" Height="100" VerticalAlignment="Top" CornerRadius="10" Background="#242526">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="*" />
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>
							<TextBlock Text="1" Grid.Row="0" FontSize="20" Foreground="#8F0606"
                                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0" />
							<TextBlock Text="Out of Stock" Grid.Row="1" FontSize="12" HorizontalAlignment="Center"
                                       VerticalAlignment="Center" Foreground="White" Margin="0,0,0,5" />
						</Grid>
					</Border>
				</StackPanel>

				<!-- Recent Items Home -->
				<Grid Grid.Row="1" Margin="20">
					<Border Background="#242526" CornerRadius="10">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="*" />
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="Auto" />
							</Grid.ColumnDefinitions>

							<TextBlock Text="Recent Inventory Changes"
                                       Margin="10"
                                       Grid.Row="0" Grid.Column="0"
                                       Foreground="White" />

							<TextBox Watermark="Search Item"
                                     Grid.Row="0" Grid.Column="1"
                                     Width="100"
                                     VerticalAlignment="Center"
                                     VerticalContentAlignment="Center"
                                     HorizontalAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     Margin="10" />

							<!-- Header Row -->
							<Grid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="10,0,10,0" HorizontalAlignment="Stretch">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="1*" />
									<ColumnDefinition Width="2*" />
									<ColumnDefinition Width="1*" />
									<ColumnDefinition Width="2*" />
									<ColumnDefinition Width="2*" />
								</Grid.ColumnDefinitions>

								<TextBlock Text="SKU" Grid.Column="0" Foreground="White" FontWeight="Bold" />
								<TextBlock Text="Item Name" Grid.Column="1" Foreground="White" FontWeight="Bold" />
								<TextBlock Text="Qty" Grid.Column="2" Foreground="White" FontWeight="Bold" />
								<TextBlock Text="Category" Grid.Column="3" Foreground="White" FontWeight="Bold" />
								<TextBlock Text="Last Updated" Grid.Column="4" Foreground="White" FontWeight="Bold" />
							</Grid>

							<!-- Items List -->
							<Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                    Background="#18191A"
                                    Margin="7,20,10,10"
                                    CornerRadius="5"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch">
								<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
									<ItemsControl ItemsSource="{Binding AllItems}">
										<ItemsControl.ItemTemplate>
											<DataTemplate x:DataType="models:Item">
												<Grid Margin="5" HorizontalAlignment="Stretch">
													<Grid.ColumnDefinitions>
														<ColumnDefinition Width="1*" />
														<ColumnDefinition Width="2*" />
														<ColumnDefinition Width="1*" />
														<ColumnDefinition Width="2*" />
														<ColumnDefinition Width="2*" />
													</Grid.ColumnDefinitions>

													<TextBlock Grid.Column="0" Text="{Binding SKUID}" Foreground="White" />
													<TextBlock Grid.Column="1" Text="{Binding ItemName}" Foreground="White" />
													<TextBlock Grid.Column="2" Text="{Binding Quantity}" Foreground="White" />
													<TextBlock Grid.Column="3" Text="{Binding Category}" Foreground="White" />
													<TextBlock Grid.Column="4" Text="{Binding LastUpdated, StringFormat='{}{0:MM/dd/yyyy}'}" Foreground="White" />
												</Grid>
											</DataTemplate>
										</ItemsControl.ItemTemplate>
									</ItemsControl>
								</ScrollViewer>
							</Border>
						</Grid>
					</Border>
				</Grid>
			</Grid>
		</Grid>
	</Border>
</UserControl>
